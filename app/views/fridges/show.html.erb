<% @foods.map do |food| %>
  <div><%= link_to("#{food.name}", "/fridges/#{@fridge.id}/foods/#{food.id}") %></div>
<%end%>

<hr>

<h2>Drinks in Fridge <%= link_to("(+)", "/fridges/#{@fridge.id}/drinks/new") %> </h2>
<% @drinks.map do |drink| %>
  <div> <%= link_to("#{drink.name}", "/fridges/#{@fridge.id}/drinks/#{drink.id}") %></div>
<% end%>

