<h1>Fridges#edit</h1>
<hr>

<%= form_for @fridge do |f| %>
  <div class="form-group">
    <%= f.text_field :location, class: "form-control", placeholder: "Location", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :brand, class: "form-control", placeholder: "Brand" %>
  </div>
  <div class="form-group">
    <%= f.text_field :size, class: "form-control", placeholder: "Size" %>
  </div>
    <%= f.submit "Update Fridge", class: "btn btn-block btn-success" %>
  </div>
<% end %>
